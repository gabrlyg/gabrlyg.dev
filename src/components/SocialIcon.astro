---
import {InstagramIcon, GithubIcon, TwitterIcon} from 'astro-feather' 
import type { SocialType } from '../types/types';

export interface Props {
  type: SocialType;
}

const socialIcons = {
  instagram: InstagramIcon,
  twitter: TwitterIcon,
  github: GithubIcon,
};

const { type } = Astro.props;

const SocialIcon = socialIcons[type];
---

<SocialIcon customClasses='group-hover:rotate-12' />
